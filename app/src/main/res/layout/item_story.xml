<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/exoplayerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:resize_mode="fill"
        app:use_controller="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:padding="20dp">

        <ImageView
            android:id="@+id/clientIV"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="12dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/clientNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/clientIV"
            android:fontFamily="sans-serif-medium"
            android:text="Ratan Tata "
            android:textColor="#e0e0e0"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/clientDiscriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clientNameTV"
            android:layout_toLeftOf="@+id/connectTV"
            android:layout_toRightOf="@+id/clientIV"
            android:fontFamily="sans-serif"
            android:text="#tatasteel #adani #industry #jio
#steel #digital #rich"
            android:textColor="#e0e0e0"

            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/connectTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_4"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/connect"
            android:textColor="#7aa34b"
            android:textSize="12sp"
            android:textStyle="normal"/>

    </RelativeLayout>


</RelativeLayout>