<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/exoplayerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        app:resize_mode="fill"
        app:use_controller="false" />

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#505050"
        android:padding="16dp">

        <ImageView
            android:id="@+id/clientIV"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/corner_40_grey"
            android:padding="2dp"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/clientNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@+id/connectTV"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_toRightOf="@+id/clientIV"
            android:fontFamily="sans-serif-medium"
            android:text="Ratan Tata"
            android:textColor="#e0e0e0"
            android:textSize="20sp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/deliveryIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/clientNameTV"
            android:layout_toEndOf="@+id/clientIV"
            android:src="@drawable/ic_delivery" />

        <TextView
            android:id="@+id/locationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clientNameTV"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/deliveryIV"
            android:text="Mumbai, India"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/clientDiscriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deliveryIV"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/connectTV"
            android:layout_toRightOf="@+id/clientIV"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="#tatasteel #adani #industry #jio
#steel #digital #rich k dfkj sdkf sdkfhk sdh fksf kskj fskj hfksfk dkjf dk "
            android:textColor="#e0e0e0"

            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/connectTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_16_white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/connect"
            android:textColor="#7aa34b"
            android:textSize="12sp"
            android:textStyle="normal" />

    </RelativeLayout>


</RelativeLayout>